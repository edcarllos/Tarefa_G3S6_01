{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compilar Projeto",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-Wall",
                "-Wextra",
                "-g3",
                "${workspaceFolder}/src/main.c",
                "${workspaceFolder}/src/conv_area.c",
                "${workspaceFolder}/src/conv_massa.c",
                "${workspaceFolder}/src/conv_temperatura.c",
                "${workspaceFolder}/src/conv_tempo.c",
                "${workspaceFolder}/src/conv_volume.c",
                "-o",
                "${workspaceFolder}/output/conversor"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}